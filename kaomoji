#! /bin/sh

# Copy a kaomoji to clipboard.

if [ "${1:-}" = "help" ] || [ "${1:-}" = "-h" ]; then
    echo ""
    echo "kaomoji - Select a Kaomoji and copy it to clipboard."
    echo ""
    echo "usage:"
    echo "  kaomoji"
    exit 1
fi

